---
import MainLayout from '../../layouts/MainLayout.astro';
import { withBase } from '../../utils/basePath';
// Removed 3D imports
---

<style>
  .jump {
    display: inline-block;
    animation: jump 1s infinite alternate cubic-bezier(.5,1.8,.5,1);
  }
  @keyframes jump {
    0% { transform: translateY(0); }
    100% { transform: translateY(-20px); }
  }
  .fish-jump {
    display: inline-block;
    animation: fish-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
  }
  @keyframes fish-jump {
    0% { transform: translateY(0) scale(1); filter: brightness(1); }
    60% { filter: brightness(1.1); }
    100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
  }
.icon-bg {
  background: linear-gradient(135deg, #f3f4f6 60%, #e0e7ff 100%);
  border-radius: 9999px;
  padding: 0.75rem;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
  margin: 0.25rem;
}
.icon-jump {
  display: inline-block;
  animation: icon-jump 1.2s infinite alternate cubic-bezier(.5,1.8,.5,1);
  transition: filter 0.2s, transform 0.2s;
  filter: drop-shadow(0 2px 6px rgba(0,0,0,0.08));
}
@keyframes icon-jump {
  0% { transform: translateY(0) scale(1); filter: brightness(1); }
  60% { filter: brightness(1.1); }
  100% { transform: translateY(-18px) scale(1.08); filter: brightness(1.2); }
}
</style>

<MainLayout 
  title="Products - Global road" 
  description="Explore our comprehensive range of fresh fruits, vegetables, and seafood available for global import-export trade with Global road."
>
  <!-- Hero Section -->
  <section class="section bg-gradient-to-br from-green-50 to-green-100">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6" data-i18n="products_title">
          Premium Products for Global Trade
        </h1>
        <p class="text-xl text-gray-600 leading-relaxed" data-i18n="products_desc">
          Our extensive product portfolio spans fresh fruits, vegetables, and seafood sourced from the world's finest regions, ensuring year-round availability and consistent quality for your import/export needs.
        </p>
      </div>
    </div>
  </section>

  <!-- Product Categories -->
  <section class="section bg-white">
    <div class="container space-y-16">
      <!-- Fish Section -->
      <div>
        <h2 class="text-3xl font-bold text-blue-800 mb-8" data-i18n="products_fish">Fish & Seafood</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Seafood Variety.jpeg')} alt="Fresh Fish and Seafood in Processing" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-blue-900">Seafood Variety</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Mackerel.png')} alt="Fresh Mackerel on Ice" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-blue-900">Mackerel</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Sardines.png')} alt="Bulk Sardines on Ice" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-blue-900">Sardines</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Assorted Seafood.png')} alt="Assorted Seafood Display" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-blue-900">Assorted Seafood</div>
          </div>
        </div>
      </div>
      <!-- Vegetables Section -->
      <div>
        <h2 class="text-3xl font-bold text-green-800 mb-8" data-i18n="products_veggies">Vegetables</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Fruiting Vegetables.png')} alt="Vibrant Fruiting Vegetable Mix" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-green-900">Fruiting Vegetables</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Root Vegetables.png')} alt="Large-Scale Root Vegetable and Produce Storage" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-green-900">Root Vegetables</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Leafy Greens.png')} alt="Assorted Leafy Greens Display" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-green-900">Leafy Greens</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Mushrooms.png')} alt="Bulk Mushroom Varieties" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-green-900">Mushrooms</div>
          </div>
        </div>
      </div>
      <!-- Fruits Section -->
      <div>
        <h2 class="text-3xl font-bold text-orange-800 mb-8" data-i18n="products_fruits">Fruits</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Dried Fruits.png')} alt="Bulk Dried Fruits Assortment" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-orange-900" data-i18n="card_dried_fruits_title">Dried Fruits</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Citrus Fruits.png')} alt="Citrus Fruit Warehouse" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-orange-900" data-i18n="card_citrus_fruits_title">Citrus Fruits</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Melons.png')} alt="Melons in Commercial Storage" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-orange-900" data-i18n="card_melons_title">Melons</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Apples & Pears.png')} alt="Apple and Pear Storage Facility" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-orange-900" data-i18n="card_apples_pears_title">Apples & Pears</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Apple Warehouse.png')} alt="Expansive Apple Warehouse" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-orange-900" data-i18n="card_apple_warehouse_title">Apple Warehouse</div>
          </div>
          <div class="card group hover:shadow-xl transition-shadow duration-300">
            <img src={withBase('/Bulk Berries.png')} alt="Bulk Berries in Storage" class="h-48 w-full object-cover rounded-t-2xl" />
            <div class="p-4 text-center font-bold text-lg text-orange-900" data-i18n="card_bulk_berries_title">Bulk Berries</div>
          </div>
        </div>
      </div>
    </div>
  </section>

</MainLayout>
