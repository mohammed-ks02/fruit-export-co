---
// Footer component
const currentYear = new Date().getFullYear();
---

<footer class="bg-green-900 text-white py-8">
  <div class="container">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center mb-4">
          <span class="text-2xl font-bold"><span data-i18n="brand">Global road</span></span>
        </div>
        <p class="text-green-100 mb-4 max-w-md" data-i18n="footer_desc">
          Your trusted partner in global import & export. Connecting the world with reliable logistics and fresh produce.
        </p>
        <div class="flex space-x-4">
          <!-- Social Media Icons -->
          <a href="#" class="text-green-200 hover:text-white transition-colors" aria-label="LinkedIn">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
          <a href="#" class="text-green-200 hover:text-white transition-colors" aria-label="Twitter">
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-semibold text-lg mb-4" data-i18n="footer_links">Quick Links</h3>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-green-200 hover:text-white transition-colors" data-i18n="nav_home">
              Home
            </a>
          </li>
          <li>
            <a href="/products" class="text-green-200 hover:text-white transition-colors" data-i18n="nav_products">
              Products
            </a>
          </li>
          <li>
            <a href="/about" class="text-green-200 hover:text-white transition-colors" data-i18n="nav_about">
              About Us
            </a>
          </li>
          <li>
            <a href="/contact" class="text-green-200 hover:text-white transition-colors" data-i18n="nav_contact">
              Contact
            </a>
          </li>
        </ul>
      </div>

      <!-- Contact Information -->
      <div>
        <h3 class="font-semibold text-lg mb-4" data-i18n="footer_contact">Contact Us</h3>
        <div class="space-y-3 text-green-200">
          <div class="flex items-start">
            <svg class="h-5 w-5 mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            <div>
              <p data-i18n="footer_address">Rue 36 Ibn tachfine agdal rabat</p>
            </div>
          </div>
          <div class="flex items-center">
            <svg class="h-5 w-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            <p data-i18n="footer_phone">+212 600-000000</p>
          </div>
          <div class="flex items-center">
            <svg class="h-5 w-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
            <p data-i18n="footer_email">contact@globalroad.com</p>
          </div>
        </div>
      </div>
    </div>
    <div class="divider my-4"></div>
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="text-green-200 text-sm mb-2 md:mb-0" data-i18n="footer_copyright">
        &copy; {currentYear} Global road. All rights reserved.
      </div>
    </div>
  </div>
</footer>
